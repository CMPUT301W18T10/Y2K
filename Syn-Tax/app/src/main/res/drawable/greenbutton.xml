<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <stroke android:color="#787878"
                android:width="3dp">
            </stroke>

            <corners android:radius="6dp">
            </corners>

            <gradient android:startColor="#00AA00"
                android:centerColor="#AAFFAA"
                android:endColor="#00AA00"
                android:type="linear"
                android:angle="90">
            </gradient>

        </shape>
    </item>
</selector>