<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BidActivity"
    android:orientation="vertical"
    android:background="@drawable/syn_taxpages">

    <LinearLayout
        android:id="@+id/p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="BIDS"
            android:textAlignment="center"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:divider="?android:attr/dividerVertical"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="1">

        <ListView
            android:id="@+id/bidlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:dividerHeight="@dimen/activity_horizontal_margin"
            android:scrollbars="vertical">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="22"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="0.33"
            android:onClick="searchBtn"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="0.33"
            android:onClick="homeBtn"
            app:srcCompat="@drawable/ic_home_black_24dp" />

        <ImageButton
            android:id="@+id/userInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="0.33"
            android:onClick="userInfo"
            android:tint="@android:color/black"
            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>

</LinearLayout>